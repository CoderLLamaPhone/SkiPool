<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Ski Pool - Find a Ride</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="../../resources/css/style.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Goldman:wght@400;700&family=Markazi+Text:wght@400..700&display=swap" rel="stylesheet">
  <!-- Font Awesome for stars -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #1e3d58;
    }
    .find-ride-body {
      font-family: 'Goldman', sans-serif;
      color: #333;
      background-color: #1e3d58;
      border-radius: 10px;
      margin-bottom: 200px;
    }
    .trip-details p {
      margin-top: 0.5rem;
      margin-bottom: 0.5rem;
    }
    .circle-placeholder {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      background-color: #6c757d;
      color: #fff;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.2rem;
    }
    .find-ride-body {
      font-family: 'Goldman', sans-serif;
      color: #333;
      padding: 20px;
      background-color: #1e3d58;
      border-radius: 8px;
    }
    .trips-listing {
      background-color: #f8f9fa;
      font-family: 'Markazi Text', serif;
      font-size: 1.3rem;
      color: #333;
    }
    .trips-list-container {
      background-color: #f8f9fa;
      max-height: 580px;
      overflow-y: auto;
    }
    .btn-search {
      background-color: #3b75a8;
      color: #fff;
    }
    .btn-search:hover {
      background-color: #325176;
      color: #fff;
    }
    .btn-trip-signup {
      font-family: "Goldman", sans-serif;
      font-size: 1.2rem;
      background-color: #f39c12;
      color: #fff;
    }
    .btn-trip-signup:hover {
      background-color: #d57520;
      color: #fff;
    }
    .form-check-input:checked {
      background-color: #f39c12;
      border-color: #f39c12;
    }
    .form-check-input:focus {
      border-color: #d57520;
      box-shadow: 0 0 0 0.2rem rgba(168, 139, 59, 0.25);
    }
    .find-ride-card {
      background-color: #f8f9fa;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .ride-search-btn:hover {
      background-color: #2980b9;
      color: white
    }
    .find-ride-card {
      background-color: #f8f9fa;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .trip-list-card {
      background-color: #f8f9fa;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    /* Rating stars */
    .star {
      font-size: 2rem;
      cursor: pointer;
      margin: 0 .2rem;
    }
  </style>
</head>
<body class="bg-light">
  <div class="find-ride-body container my-4">
    <div class="row">
      <!-- Ride Search Form -->
      <div class="col-md-3 mb-4">
        <div class="card find-ride-card">
          <div class="card-header">
            <h2 class="h5 mb-0">Find a Ride</h2>
          </div>
          <div class="card-body">
            <form id="ride-search-form" method="GET" action="/rider">
              <div class="mb-3">
                <label for="resort" class="form-label">Ski Resort</label>
                <select id="resort" name="resort" class="form-select">
                  <option value="">--Select a Resort--</option>
                  <option value="Aspen" {{#if (eq resort "Aspen")}}selected{{/if}}>Aspen, CO</option>
                  <option value="Snowmass" {{#if (eq resort "Snowmass")}}selected{{/if}}>Snowmass, CO</option>
                  <option value="Winter Park" {{#if (eq resort "Winter Park")}}selected{{/if}}>Winter Park, CO</option>
                  <option value="Steamboat" {{#if (eq resort "Steamboat")}}selected{{/if}}>Steamboat, CO</option>
                  <option value="Copper Mountain" {{#if (eq resort "Copper Mountain")}}selected{{/if}}>Copper Mountain, CO</option>
                  <option value="Eldora" {{#if (eq resort "Eldora")}}selected{{/if}}>Eldora, CO</option>
                  <option value="Arapahoe Basin" {{#if (eq resort "Arapahoe Basin")}}selected{{/if}}>Arapahoe Basin, CO</option>
                  <option value="Vail" {{#if (eq resort "Vail")}}selected{{/if}}>Vail, CO</option>
                  <option value="Beaver Creek" {{#if (eq resort "Beaver Creek")}}selected{{/if}}>Beaver Creek, CO</option>
                  <option value="Breckenridge" {{#if (eq resort "Breckenridge")}}selected{{/if}}>Breckenridge, CO</option>
                  <option value="Keystone" {{#if (eq resort "Keystone")}}selected{{/if}}>Keystone, CO</option>
                  <option value="Crested Butte" {{#if (eq resort "Crested Butte")}}selected{{/if}}>Crested Butte, CO</option>
                </select>
              </div>
              <div class="mb-3">
                <label class="form-label">Pass Type</label>
                <div class="form-check">
                  <input class="form-check-input" type="radio" id="ikon" name="pass" value="Ikon" {{#if (eq pass "Ikon")}}checked{{/if}}>
                  <label class="form-check-label" for="ikon">Ikon</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" id="epic" name="pass" value="Epic" {{#if (eq pass "Epic")}}checked{{/if}}>
                  <label class="form-check-label" for="epic">Epic</label>
                </div>
              </div>
              <div class="mb-3">
                <label for="date" class="form-label">Departure Date</label>
                <input type="date" id="date" name="date" class="form-control" value="{{date}}">
              </div>
              <div class="mb-3">
                <label for="price" class="form-label">Maximum Price ($)</label>
                <input type="number" id="price" name="priceRange" class="form-control" min="0" max="100" value="{{priceRange}}">
              </div>
              <div class="mb-3">
                <label for="availableSeats" class="form-label">Minimum Available Seats</label>
                <input type="number" id="availableSeats" name="availableSeats" class="form-control" min="1" max="6" value="{{availableSeats}}">
              </div>
              <button type="submit" class="btn btn-search w-100">Search</button>
              <a href="/rider" class="btn btn-secondary w-100 mt-2">Reset Filters</a>
            </form>
          </div>
        </div>
      </div>
      <!-- Trips Listing -->
      <div class="col-md-9">
        <div class="card trip-list-card">
          <div class="card-header">
            <h2 class="h5 mb-0">Available Trips in Colorado</h2>
          </div>
          <div class="card-body trips-list-container">
            {{#if trips.length}}
              {{#each trips}}
                <div class="card mb-3 trips-listing">
                  <div class="row g-0 align-items-center">
                    <div class="col-md-2 d-flex flex-column align-items-center justify-content-center p-3">
                      <div class="circle-placeholder mb-2">
                        {{initials}}
                      </div>
                      <div class="text-center">
                        <small class="fw-bold">Driver: {{username}}</small><br>
                        <small>Trip ID: {{tripid}}</small>
                      </div>
                    </div>
                    <div class="col-md-8">
                      <div class="row trip-details">
                        <div class="col-md-6">
                          <p><strong>Pickup Location:</strong> {{pickuplocation}}</p>
                          <p><strong>Departure Date:</strong> {{date}}</p>
                          <p><strong>Departure Time:</strong> {{est_outbound}}</p>
                          <p><strong>Return Time:</strong> {{est_return}}</p>
                        </div>
                        <div class="col-md-6">
                          <p><strong>Remaining Seats:</strong> {{remainingSeats}}/{{capacity}}</p>
                          <p><strong>Resort:</strong> {{resort}}</p>
                          <p><strong>Pass:</strong> {{pass}}</p>
                          <p><strong>Price ($):</strong> {{cost}}</p>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-2 d-flex align-items-center justify-content-center">
                      {{#if isUserSignedUp}}
                        <div class="d-flex flex-column align-items-center">
                          <div class="badge bg-success mb-2">
                            &#10003; Signed up
                          </div>
                          <!-- Edit Ride button carries availableSeats -->
                          <button class="btn btn-warning"
                            data-bs-toggle="modal"
                            data-bs-target="#signupModal"
                            data-driver="{{username}}"
                            data-destination="{{resort}}"
                            data-tripid="{{tripid}}"
                            data-availableseats="{{remainingSeats}}"
                            data-signup='{{json userSignup}}'>
                            Edit Ride
                          </button>
                          <!-- Rate Driver button -->
                          <button class="btn btn-outline-primary mt-2 rate-driver-btn"
                            data-bs-toggle="modal"
                            data-bs-target="#ratingModal"
                            data-tripid="{{tripid}}"
                            data-date="{{date}}">
                            Rate Driver
                          </button>
                        </div>
                      {{else}}
                        <button class="btn btn-trip-signup"
                          data-bs-toggle="modal"
                          data-bs-target="#signupModal"
                          data-driver="{{username}}"
                          data-destination="{{resort}}"
                          data-tripid="{{tripid}}"
                          data-availableseats="{{remainingSeats}}">
                          Sign Up
                        </button>
                      {{/if}}
                    </div>
                  </div>
                </div>
              {{/each}}
            {{else}}
              <p class="text-muted">No trips available.</p>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Sign Up / Edit Ride Modal -->
  <div class="modal fade" id="signupModal" tabindex="-1" aria-labelledby="signupModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="signupModalLabel">Sign Up for Ride</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="signup-form" action="/signup" method="POST">
            <input type="hidden" name="tripId" id="tripId">
            <input type="hidden" name="signupId" id="signupId">
            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <label for="fullName" class="form-label">Full Name</label>
                  <input type="text" name="fullName" class="form-control" id="fullName" placeholder="Enter your full name" required>
                </div>
                <div class="mb-3">
                  <label for="emailAddress" class="form-label">Email Address</label>
                  <input type="email" name="emailAddress" class="form-control" id="emailAddress" placeholder="name@example.com" required>
                </div>
                <div class="mb-3">
                  <label class="form-label">Payment Option</label>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="paymentOption" id="paymentCash" value="Cash" checked>
                    <label class="form-check-label" for="paymentCash">Cash</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="paymentOption" id="paymentVenmo" value="Venmo">
                    <label class="form-check-label" for="paymentVenmo">Venmo</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="paymentOption" id="paymentZelle" value="Zelle">
                    <label class="form-check-label" for="paymentZelle">Zelle</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="paymentOption" id="paymentOther" value="Other">
                    <label class="form-check-label" for="paymentOther">Other</label>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="mb-3">
                  <label for="phoneNumber" class="form-label">Phone Number</label>
                  <input type="tel" name="phoneNumber" class="form-control" id="phoneNumber" placeholder="Your phone number" required>
                </div>
                <div class="mb-3">
                  <label for="pickupLocation" class="form-label">Preferred Pickup Location</label>
                  <input type="text" name="pickupLocation" class="form-control" id="pickupLocation" placeholder="Enter pickup location" required>
                </div>
                <div class="mb-3">
                  <label for="partySize" class="form-label">Number of People in Party</label>
                  <input type="number" name="partySize" id="partySize" class="form-control" min="1" value="1" required>
                  <div class="form-text text-muted">
                    (cannot exceed <span id="maxSeatsDisplay"></span> seats)
                  </div>
                </div>
                <div class="mb-3">
                  <label for="specialRequirements" class="form-label">Special Requirements</label>
                  <textarea class="form-control" name="specialRequirements" id="specialRequirements" placeholder="Enter any special requirements"></textarea>
                </div>
              </div>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" id="cancelRideButton" style="display: none;">Cancel Ride</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" form="signup-form" class="btn btn-primary">Sign Up</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Rating Modal -->
  <div class="modal fade" id="ratingModal" tabindex="-1" aria-labelledby="ratingModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="ratingModalLabel">Rate Driver</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body text-center">
          <div id="starContainer">
            <i class="fa fa-star-o star" data-value="1"></i>
            <i class="fa fa-star-o star" data-value="2"></i>
            <i class="fa fa-star-o star" data-value="3"></i>
            <i class="fa fa-star-o star" data-value="4"></i>
            <i class="fa fa-star-o star" data-value="5"></i>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" id="submitRatingBtn" disabled>Submit</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Grab modals
    var signupModal = document.getElementById('signupModal');
    var ratingModal = document.getElementById('ratingModal');
    var selectedRating = 0;

    // Show signup modal: populate and set max seats
    signupModal.addEventListener('show.bs.modal', function (event) {
      var button = event.relatedTarget;
      var driver = button.getAttribute('data-driver');
      var destination = button.getAttribute('data-destination');
      var tripId = button.getAttribute('data-tripid');
      var signupDataStr = button.getAttribute('data-signup');
      var availableSeats = Number(button.getAttribute('data-availableseats'));

      // store for validation
      signupModal.dataset.availableseats = availableSeats;
      document.getElementById('maxSeatsDisplay').textContent = availableSeats;
      document.getElementById('partySize').setAttribute('max', availableSeats);

      // reset form
      var signupForm = document.getElementById('signup-form');
      signupForm.reset();
      document.getElementById('tripId').value = tripId;

      var modalTitle = signupModal.querySelector('.modal-title');
      var primaryBtn = signupModal.querySelector('.btn-primary');
      var cancelBtn = document.getElementById('cancelRideButton');

      if (signupDataStr) {
        var signupData = JSON.parse(signupDataStr);
        modalTitle.textContent = "Edit Ride for " + driver + "'s ride to " + destination;
        // populate fields...
        document.getElementById('signupId').value = signupData.signupid || '';
        document.getElementById('fullName').value = signupData.fullname || '';
        document.getElementById('emailAddress').value = signupData.emailaddress || '';
        document.getElementById('phoneNumber').value = signupData.phonenumber || '';
        document.getElementById('pickupLocation').value = signupData.pickuplocation || '';
        document.getElementById('partySize').value = signupData.partysize || '1';
        document.getElementById('specialRequirements').value = signupData.specialrequirements || '';
        signupForm.action = "/updateSignup";
        cancelBtn.style.display = 'inline-block';
        primaryBtn.textContent = "Save Changes";
      } else {
        modalTitle.textContent = "Sign Up for " + driver + "'s ride to " + destination;
        document.getElementById('signupId').value = "";
        signupForm.action = "/signup";
        cancelBtn.style.display = 'none';
        primaryBtn.textContent = "Sign Up";
      }
    });

    // Validate party size <= available seats
    document.getElementById('signup-form').addEventListener('submit', function(e) {
      var size = Number(document.getElementById('partySize').value);
      var max = Number(signupModal.dataset.availableseats);
      if (size > max) {
        e.preventDefault();
        alert('Party size cannot exceed available seats (' + max + ').');
      }
    });

    // Cancel ride logic
    document.getElementById('cancelRideButton').addEventListener('click', function () {
      var signupId = document.getElementById('signupId').value;
      if (signupId && confirm("Are you sure you want to cancel your ride?")) {
        window.location.href = "/cancelSignup?signupId=" + signupId;
      }
    });

    // On page load: enable/disable Rate Driver buttons
    document.querySelectorAll('.rate-driver-btn').forEach(function(btn) {
      var tripDate = new Date(btn.getAttribute('data-date'));
      var today = new Date();
      if (tripDate <= today) {
        btn.removeAttribute('disabled');
        btn.classList.remove('disabled');
      } else {
        btn.setAttribute('disabled','');
        btn.classList.add('disabled');
      }
    });

    // Rating modal: reset & capture tripId
    ratingModal.addEventListener('show.bs.modal', function(event) {
      selectedRating = 0;
      var button = event.relatedTarget;
      ratingModal.dataset.tripid = button.getAttribute('data-tripid');
      document.getElementById('submitRatingBtn').disabled = true;
      ratingModal.querySelectorAll('.star').forEach(s => {
        s.classList.remove('fa-star');
        s.classList.add('fa-star-o');
      });
    });

    // Star click handler
    ratingModal.querySelectorAll('.star').forEach(function(star) {
      star.addEventListener('click', function() {
        selectedRating = Number(this.dataset.value);
        ratingModal.querySelectorAll('.star').forEach(s => {
          if (Number(s.dataset.value) <= selectedRating) {
            s.classList.remove('fa-star-o');
            s.classList.add('fa-star');
          } else {
            s.classList.remove('fa-star');
            s.classList.add('fa-star-o');
          }
        });
        document.getElementById('submitRatingBtn').disabled = false;
      });
    });

    // Submit rating
    document.getElementById('submitRatingBtn').addEventListener('click', function() {
      var tripId = ratingModal.dataset.tripid;
      var rating = selectedRating;
      // Navigate to the GET endpoint; server will insert & redirect
      window.location.href = `/submitRating?tripId=${tripId}&rating=${rating}`;
    });
  </script>
</body>
</html>