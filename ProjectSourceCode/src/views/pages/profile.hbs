<!-- Profile Card -->
<div class="card">
  <div class="profile-container">
    <div class="profile-image">
      <img src="/images/default-profile.jpg" alt="{{user.username}}">
    </div>
    <div class="profile-details">
      <h1>{{user.username}}</h1>
      <p><strong>Email:</strong> {{user.email}}</p>
      <p><strong>Ikon Pass:</strong> {{#if hasIkonPass}}Yes{{else}}No{{/if}}</p>
      <p><strong>About Me:</strong> Passionate about skiing and adventure. I love planning trips in advance and exploring Coloradoâ€™s finest ski resorts with friends and family.</p>
    </div>
  </div>
</div>

<!-- Rating Card -->
{{#if avgRating}}
  <div class="card">
    <h2>Rating</h2>
    <div class="rating-stars">
      {{#each (stars avgRating)}}
        {{#if this}}&#9733;{{else}}&#9734;{{/if}}
      {{/each}}
      <span>({{avgRating}} out of 5)</span>
    </div>
  </div>
{{/if}}

<!-- Trips Section -->
<div class="trips-section">
  <!-- Past Trips -->
  <div class="card">
    <h3>Past Trips</h3>
    {{#each pastTrips}}
      <div class="trip">
        <p><strong>{{resort}}, {{location}}</strong></p>
        <p>Date: {{date}}</p>
      </div>
    {{else}}
      <p>No past trips.</p>
    {{/each}}
  </div>

  <!-- Upcoming Trips -->
  <div class="card">
    <h3>Upcoming Trips</h3>
    {{#each upcomingTrips}}
      <div class="trip">
        <p><strong>{{resort}}, {{location}}</strong></p>
        <p>Date: {{date}}</p>
      </div>
    {{else}}
      <p>No upcoming trips.</p>
    {{/each}}
  </div>
</div>