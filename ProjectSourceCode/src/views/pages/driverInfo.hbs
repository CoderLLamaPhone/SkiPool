<div class="container mt-4">
    <div class="row">
        <!-- Create Drive Button -->
        <div class="col-md-3">
            <button class="btn btn-primary w-75" data-bs-toggle="modal" data-bs-target="#createDriveModal">
                Create Drive
            </button>
        </div>

        <!-- Your Trips -->
        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    <h2 class="h5 mb-0">Your Trips</h2>
                </div>
                <div class="card-body">
                    {{#if trips.length}}
                        {{#each trips}}
                            <div class="card mb-3">
                                <div class="card-body">
                                    <h5 class="card-title">{{pickuplocation}} â†’ {{resort}}</h5>
                                    <p class="card-text">
                                        <strong>Departure Date:</strong> {{departuredate}} <br>
                                        <strong>Price:</strong> ${{price}} <br>
                                        <strong>Available Seats:</strong> {{seats}} <br>
                                        <strong>Estimated Departure Time:</strong> {{departuretime}} <br>
                                        <strong>Estimated Return Time:</strong> {{returntime}} <br>
                                        <strong>Car:</strong> {{car}} <br>
                                        <strong>Additional Info:</strong> {{info}} <br>
                                    </p>
                                </div>
                            </div>
                        {{/each}}
                    {{else}}
                        <p>No drives created yet.</p>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Drive Modal -->
<div class="modal fade" id="createDriveModal" tabindex="-1" aria-labelledby="createDriveModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createDriveModalLabel">Create a New Drive</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <form action="/driver" method="POST">
                    <div class="mb-3">
                        <label for="pickupLocation" class="form-label">Pickup Location</label>
                        <input type="text" class="form-control" id="pickupLocation" name="pickupLocation" required>
                    </div>

                    <div class="mb-3">
                        <label for="resort" class="form-label">Destination Resort</label>
                        <select class="form-select" id="resort" name="resort" required>
                            <option value="">Select a Resort</option>
                            <option value="Breckenridge">Breckenridge</option>
                            <option value="Vail">Vail</option>
                            <option value="Aspen Snowmass">Aspen Snowmass</option>
                            <option value="Copper Mountain">Copper Mountain</option>
                            <option value="Eldora">Eldora</option>
                            <option value="Winter Park">Winter Park</option>
                            <option value="Arapahoe Basin">Arapahoe Basin</option>
                            <option value="Telluride">Telluride</option>
                            <option value="Steamboat">Steamboat</option>
                            <option value="Keystone">Keystone</option>
                            <option value="Crested Butte">Crested Butte</option>
                            <option value="Beaver Creek">Beaver Creek</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="departureDate" class="form-label">Departure Date</label>
                        <input type="date" class="form-control" id="departureDate" name="departureDate" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="departureTime" class="form-label">Estimated Departure Time</label>
                        <input type="time" class="form-control" id="departureTime" name="departureTime" required>
                    </div>

                    <div class="mb-3">
                        <label for="returnTime" class="form-label">Estimated Return Time</label>
                        <input type="time" class="form-control" id="returnTime" name="returnTime" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="price" class="form-label">Price ($)</label>
                        <input type="number" class="form-control" id="price" name="price" required>
                    </div>

                    <div class="mb-3">
                        <label for="seats" class="form-label">Available Seats</label>
                        <input type="number" class="form-control" id="seats" name="seats" required>
                    </div>

                    <div class="mb-3">
                        <label for="car" class="form-label">Car</label>
                        <input type="text" class="form-control" id="car" name="car">
                    </div>

                    <div class="mb-3">
                        <label for="info" class="form-label">Additional Info</label>
                        <textarea class="form-control" id="info" name="info"></textarea>
                    </div>

                    <!-- Modal Footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Create Drive</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>