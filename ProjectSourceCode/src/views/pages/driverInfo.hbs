<div class="container mt-4">
    <div class="row">
        <!-- Create Drive Button -->
        <div class="col-md-3">
            <button class="btn btn-primary w-75" data-bs-toggle="modal" data-bs-target="#createDriveModal">
                Create Drive
            </button>
        </div>

        <!-- Your Trips -->
        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    <h2 class="h5 mb-0">Your Trips</h2>
                </div>
                <div class="card-body">
                    {{#if trips.length}}
                        {{#each trips}}
                            <div class="card mb-3">
                                <div class="card-body">
                                    <h5 class="card-title">{{pickupLocation}} â†’ {{resort}}</h5>
                                    <p class="card-text">
                                        <strong>Departure Date:</strong> {{departureDate}} <br>
                                        <strong>Price:</strong> ${{price}} <br>
                                        <strong>Available Seats:</strong> {{seats}} <br>
                                        <strong>Gear Space:</strong> {{gearSpace}} <br>
                                        <strong>Additional Info:</strong> {{info}} <br>
                                        <strong>Pass Type:</strong> {{pass}}
                                    </p>
                                </div>
                            </div>
                        {{/each}}
                    {{else}}
                        <p>No drives created yet.</p>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Drive Modal -->
<div class="modal fade" id="createDriveModal" tabindex="-1" aria-labelledby="createDriveModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createDriveModalLabel">Create a New Drive</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <form action="/driver" method="POST">
                    <div class="mb-3">
                        <label for="pickupLocation" class="form-label">Pickup Location</label>
                        <input type="text" class="form-control" id="pickupLocation" name="pickupLocation" required>
                    </div>

                    <div class="mb-3">
                        <label for="resort" class="form-label">Destination Resort</label>
                        <select class="form-select" id="resort" name="resort" required>
                            <option value="">Select a Resort</option>
                            <option value="breckenridge">Breckenridge</option>
                            <option value="vail">Vail</option>
                            <option value="aspensnowmass">Aspen Snowmass</option>
                            <option value="copper">Copper Mountain</option>
                            <option value="eldora">Eldora</option>
                            <option value="winterpark">Winter Park</option>
                            <option value="arapahoebasin">Arapahoe Basin</option>
                            <option value="telluride">Telluride</option>
                            <option value="steamboat">Steamboat</option>
                            <option value="keystone">Keystone</option>
                            <option value="crestedbutte">Crested Butte</option>
                            <option value="beavercreek">Beaver Creek</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="departureDate" class="form-label">Departure Date</label>
                        <input type="date" class="form-control" id="departureDate" name="departureDate" required>
                    </div>

                    <div class="mb-3">
                        <label for="price" class="form-label">Price ($)</label>
                        <input type="number" class="form-control" id="price" name="price" required>
                    </div>

                    <div class="mb-3">
                        <label for="seats" class="form-label">Available Seats</label>
                        <input type="number" class="form-control" id="seats" name="seats" required>
                    </div>

                    <div class="mb-3">
                        <label for="gearSpace" class="form-label">Gear Space</label>
                        <input type="text" class="form-control" id="gearSpace" name="gearSpace">
                    </div>

                    <div class="mb-3">
                        <label for="info" class="form-label">Additional Info</label>
                        <textarea class="form-control" id="info" name="info"></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="pass" class="form-label">Pass Type</label>
                        <select class="form-select" id="pass" name="pass">
                            <option value="ikon">Ikon</option>
                            <option value="epic">Epic</option>
                        </select>
                    </div>

                    <!-- Modal Footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Create Drive</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>